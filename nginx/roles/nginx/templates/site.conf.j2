server {
  listen 80;
  listen [::]:80;
  root /var/www/html/;
  index index.html info.php index.htm index.nginx-debian.html;
  server_name {{ domain }};
  location / {
        try_files $uri $uri/ =404;
    }

    location ~ \.php$ {
        include snippets/fastcgi-php.conf;
        fastcgi_pass unix:/run/php/php7.2-fpm.sock;
    }

    location ~ /\.ht {
        deny all;
    }
}


